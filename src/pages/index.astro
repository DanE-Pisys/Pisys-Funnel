---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Value from "../components/Value.astro";
import Promise from "../components/Promise.astro";
import Process from "../components/Process.astro";
import FAQ from "../components/FAQ.astro";
import PromptForm from "../components/PromptForm.astro";
import FooterTrust from "../components/FooterTrust.astro";
import Logos from "../components/Logos.astro";
import seo from "../content/seo.json";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Pisys.Net",
  "url": seo.canonical,
  "areaServed": seo.serviceArea,
  "description": seo.description,
  "serviceType": "Cyber risk audit",
  "offers": {
    "@type": "Offer",
    "name": "Free Cyber Risk Audit",
    "price": "0",
    "priceCurrency": "GBP"
  }
};
---

<BaseLayout title={seo.title} description={seo.description} canonical={seo.canonical} structuredData={structuredData}>
  <Hero />
  <Logos />
  <Value />
  <Promise />
  <Process />
  <FAQ />
  <PromptForm />
  <FooterTrust />
</BaseLayout>
