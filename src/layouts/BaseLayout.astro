---
import "../styles/global.css";
import seoDefaults from "../content/seo.json";

const {
  title = seoDefaults.title,
  description = seoDefaults.description,
  canonical = seoDefaults.canonical,
  structuredData
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://api.web3forms.com" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
    <link rel="manifest" href="/favicons/site.webmanifest" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#013753" />
    <meta
      name="ai-page-purpose"
      content="Help UK business decision-makers understand their real cyber security risks and book a free cyber risk audit without jargon or fear-based selling."
    />
    <title>{title}</title>
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={seoDefaults.siteName} />
    {seoDefaults.ogImage && <meta property="og:image" content={seoDefaults.ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    {structuredData && (
      <script type="application/ld+json">
        {JSON.stringify(structuredData)}
      </script>
    )}
  </head>
  <body class="bg-white text-[var(--color-text)]">
    <slot />
  </body>
</html>
